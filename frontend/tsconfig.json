{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "strictNullChecks": true,
    "baseUrl": ".",
    "paths": {
      "@public/*": ["public/*"],
      "@layouts/*": ["src/app/layouts/*"],
      "@styles/*": ["src/app/styles/*"],
      "@providers/*": ["src/providers/ui/*"],
      "@config/*": ["src/app/config/*"],
      "@svg/*": ["src/shared/assets/svg/*"],
      "@pages/*": ["src/pages/*"],
      "@hooks/*": ["src/shared/lib/hooks/*"],
      "@ui/*": ["src/shared/ui/*"],
      "@widgets/*": ["src/widgets/*"],
      "@entities/*": ["src/entities/*"],
      "@features/*": ["src/features/*"],
      "@shared/*": ["src/shared/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "src/app/types/global.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
}
